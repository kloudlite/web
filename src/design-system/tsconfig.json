{
  "include": ["components/**/*.ts", "components/**/*.tsx","components/**/*.js", "components/**/*.jsx"],
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/components/*": [
        "./components/*"
      ]
    },

    "declaration": true,
    "noEmit": false
    // Remix takes care of building everything in `remix build`.
  },
  "exclude": [
    "node_modules/**/*",
    "public",
    "book",
    "css-plugins"
  ]
}
