{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/**.svg",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/public/*": ["./public/*"],
      "~/images/*": ["./images/*"],
      "~/app/*": ["./web/*"],
      "~/services/*": ["./services/*"],
      "flexsearch": ["./node_modules/@types/flexsearch"]
    },
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "mdx": {
    "plugins": [["remark-frontmatter", ["toml", "yaml"]], "remark-gfm"]
  },
  "exclude": ["node_modules/**/*", ".next", "out"]
}
